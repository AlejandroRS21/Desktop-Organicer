<Application x:Class="DesktopOrganizer.UI.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:DesktopOrganizer.UI.Converters"
             Startup="OnStartup"
             Exit="OnExit">
    <Application.Resources>
         <ResourceDictionary>
            <!-- Converters -->
            <local:BoolToVisibilityConverter x:Key="BoolToVisibility"/>
            <local:InverseBoolToVisibilityConverter x:Key="InverseBoolToVisibility"/>
            
            <!-- Global Colors -->
            <SolidColorBrush x:Key="PrimaryColor" Color="#4A90E2"/>
            <SolidColorBrush x:Key="AccentColor" Color="#50E3C2"/>
            <SolidColorBrush x:Key="DarkBackground" Color="#1E293B"/>
            <SolidColorBrush x:Key="LightText" Color="#F8FAFC"/>
         </ResourceDictionary>
    </Application.Resources>
</Application>
