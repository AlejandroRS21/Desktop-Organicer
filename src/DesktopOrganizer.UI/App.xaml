<Application x:Class="DesktopOrganizer.UI.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:DesktopOrganizer.UI.Converters"
             Startup="OnStartup"
             Exit="OnExit">
    <Application.Resources>
         <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Colors.xaml" />
                <ResourceDictionary Source="Resources/Themes/Light.xaml" />
                <ResourceDictionary Source="Resources/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <!-- Converters -->
            <!-- Converters -->
            <local:BoolToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
            <local:InverseBoolToVisibilityConverter x:Key="InverseBooleanToVisibilityConverter"/>
            <local:NullToVisibilityConverter x:Key="NullToVisibilityConverter"/>
         </ResourceDictionary>
    </Application.Resources>
</Application>
