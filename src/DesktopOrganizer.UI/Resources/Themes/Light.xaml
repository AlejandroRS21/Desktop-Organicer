<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- LIGHT THEME SEMANTICS -->
    
    <!-- Backgrounds -->
    <SolidColorBrush x:Key="Bg.Primary" Color="{StaticResource Slate50}" />
    <SolidColorBrush x:Key="Bg.Secondary" Color="{StaticResource White}" /> <!-- Sidebar/Panels -->
    <SolidColorBrush x:Key="Bg.Card" Color="{StaticResource White}" />
    <SolidColorBrush x:Key="Bg.Card.Hover" Color="{StaticResource Slate50}" />
    <SolidColorBrush x:Key="Bg.Input" Color="{StaticResource White}" />
    
    <!-- Text -->
    <SolidColorBrush x:Key="Text.Primary" Color="{StaticResource Slate800}" />
    <SolidColorBrush x:Key="Text.Secondary" Color="{StaticResource Slate500}" />
    <SolidColorBrush x:Key="Text.Muted" Color="{StaticResource Slate400}" />
    <SolidColorBrush x:Key="Text.Inverted" Color="{StaticResource White}" />

    <!-- Borders -->
    <SolidColorBrush x:Key="Border.Light" Color="{StaticResource Slate200}" />
    <SolidColorBrush x:Key="Border.Input" Color="{StaticResource Slate300}" />
    
    <!-- Brand -->
    <SolidColorBrush x:Key="Brand.Primary" Color="{StaticResource Blue600}" />
    <SolidColorBrush x:Key="Brand.Primary.Hover" Color="{StaticResource Blue700}" />
    <SolidColorBrush x:Key="Brand.Bg" Color="{StaticResource Blue50}" />
    <SolidColorBrush x:Key="Brand.Text" Color="{StaticResource Blue700}" />

    <!-- Status -->
    <SolidColorBrush x:Key="Status.Error" Color="{StaticResource Red500}" />
    <SolidColorBrush x:Key="Status.Success" Color="{StaticResource Green500}" />

    <!-- Shadows/Effects (Can use numeric values or colors) -->
    <Color x:Key="Shadow.Color">#000000</Color>
    <SolidColorBrush x:Key="Overlay.Dim" Color="#80000000" />

</ResourceDictionary>
