<Window x:Class="DesktopOrganizer.UI.Views.SettingsView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Settings" Height="300" Width="500">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Configuration" FontSize="18" FontWeight="Bold" Margin="0,0,0,20"/>

        <StackPanel Grid.Row="1">
            <TextBlock Text="Monitored Directories (semicolon separated)" Margin="0,0,0,5"/>
            <TextBox Text="{Binding MonitoredDirectories, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,15" Padding="5"/>
            
            <Button Content="Save Settings" Command="{Binding SaveCommand}" HorizontalAlignment="Left" Padding="20,5"/>
        </StackPanel>

        <StatusBar Grid.Row="2">
            <StatusBarItem>
                <TextBlock Text="{Binding StatusMessage}"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
