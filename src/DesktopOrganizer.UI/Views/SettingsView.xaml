<Window x:Class="DesktopOrganizer.UI.Views.SettingsView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Desktop Organizer - ConfiguraciÃ³n" Height="600" Width="800"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource Bg.Primary}"
        ResizeMode="CanResize"
        MinWidth="700" MinHeight="500"
        WindowStyle="SingleBorderWindow"
        Closing="Window_Closing">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Sidebar -->
        <Border Background="{DynamicResource Bg.Secondary}" BorderBrush="{DynamicResource Border.Light}" BorderThickness="0,0,1,0">
            <StackPanel Margin="0,30">
                <!-- Logo/Title -->
                <TextBlock Text="ðŸ—‚ï¸ Desktop" Style="{DynamicResource Text.Header}" FontSize="20" HorizontalAlignment="Center" Margin="0,0,0,5"/>
                <TextBlock Text="Organizer" Style="{DynamicResource Text.Caption}" FontSize="14" HorizontalAlignment="Center" Margin="0,0,0,30"/>
                
                <Border Height="1" Background="{DynamicResource Border.Light}" Margin="20,0,20,20"/>
                
                <TextBlock Text="AJUSTES" Style="{DynamicResource Text.Caption}" FontWeight="Bold" Margin="20,0,0,10"/>
                
                <!-- Menu Items as Radio Buttons -->
                <RadioButton x:Name="TabPersonalization" GroupName="Tabs" IsChecked="True" Checked="Tab_Checked">
                    <RadioButton.Template>
                        <ControlTemplate TargetType="RadioButton">
                            <Border x:Name="bg" Background="Transparent" Padding="20,12" Margin="10,2" CornerRadius="6" Cursor="Hand">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="ðŸŽ¨" FontSize="16" Margin="0,0,10,0"/>
                                    <TextBlock x:Name="txt" Text="PersonalizaciÃ³n" Foreground="{DynamicResource Text.Secondary}" FontSize="14"/>
                                </StackPanel>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsChecked" Value="True">
                                    <Setter TargetName="bg" Property="Background" Value="{DynamicResource Brand.Bg}"/>
                                    <Setter TargetName="txt" Property="Foreground" Value="{DynamicResource Brand.Text}"/>
                                    <Setter TargetName="txt" Property="FontWeight" Value="SemiBold"/>
                                </Trigger>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="bg" Property="Background" Value="{DynamicResource Bg.Surface.Hover}"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </RadioButton.Template>
                </RadioButton>
                
                <RadioButton x:Name="TabCategories" GroupName="Tabs" Checked="Tab_Checked">
                    <RadioButton.Template>
                        <ControlTemplate TargetType="RadioButton">
                            <Border x:Name="bg" Background="Transparent" Padding="20,12" Margin="10,2" CornerRadius="6" Cursor="Hand">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="ðŸ“‹" FontSize="16" Margin="0,0,10,0"/>
                                    <TextBlock x:Name="txt" Text="Reglas" Foreground="{DynamicResource Text.Secondary}" FontSize="14"/>
                                </StackPanel>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsChecked" Value="True">
                                    <Setter TargetName="bg" Property="Background" Value="{DynamicResource Brand.Bg}"/>
                                    <Setter TargetName="txt" Property="Foreground" Value="{DynamicResource Brand.Text}"/>
                                    <Setter TargetName="txt" Property="FontWeight" Value="SemiBold"/>
                                </Trigger>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="bg" Property="Background" Value="{DynamicResource Bg.Surface.Hover}"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </RadioButton.Template>
                </RadioButton>
            </StackPanel>
        </Border>

        <!-- Content Panels -->
        <Grid Grid.Column="1">
            <!-- Personalization Panel -->
            <Grid x:Name="PersonalizationPanel" Margin="40">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <StackPanel>
                    <TextBlock Text="PersonalizaciÃ³n" Style="{DynamicResource Text.Header}"/>
                    <TextBlock Text="Personaliza la apariencia de tus Fences y de la aplicaciÃ³n." Style="{DynamicResource Text.SubHeader}" FontSize="14" Margin="0,5,0,0"/>
                </StackPanel>

                <ScrollViewer Grid.Row="1" Margin="0,25,0,0" VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        
                        <!-- Card: App Theme -->
                        <Border Style="{DynamicResource Card}" Margin="0,0,0,20">
                            <StackPanel>
                                <TextBlock Text="Tema de la AplicaciÃ³n" Style="{DynamicResource Text.SubHeader}" FontSize="16"/>
                                <TextBlock Text="Elige entre modo claro u oscuro" Style="{DynamicResource Text.Caption}" Margin="0,2,0,15"/>
                                
                                <ComboBox SelectedIndex="{Binding ThemeMode}" Width="200" HorizontalAlignment="Left" Padding="10,8" 
                                          Background="{DynamicResource Bg.Input}" 
                                          Foreground="{DynamicResource Text.Primary}" 
                                          BorderBrush="{DynamicResource Border.Input}">
                                    <ComboBox.Resources>
                                        <SolidColorBrush x:Key="{x:Static SystemColors.WindowBrushKey}" Color="Transparent" />
                                        <Style TargetType="ComboBoxItem">
                                            <Setter Property="Background" Value="{DynamicResource Bg.Input}"/>
                                            <Setter Property="Foreground" Value="{DynamicResource Text.Primary}"/>
                                        </Style>
                                    </ComboBox.Resources>
                                    <ComboBoxItem Content="â˜€ï¸  Claro"/>
                                    <ComboBoxItem Content="ðŸŒ™  Oscuro"/>
                                </ComboBox>
                            </StackPanel>
                        </Border>

                        <!-- Card: Opacity -->
                        <Border Style="{DynamicResource Card}" Margin="0,0,0,20">
                            <StackPanel>
                                <TextBlock Text="Opacidad de Fences" Style="{DynamicResource Text.SubHeader}" FontSize="16"/>
                                <TextBlock Text="Controla la transparencia del fondo de los grupos" Style="{DynamicResource Text.Caption}" Margin="0,2,0,15"/>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="70"/>
                                    </Grid.ColumnDefinitions>
                                    <Slider x:Name="OpacitySlider" 
                                            Minimum="0.3" Maximum="1.0" 
                                            Value="{Binding FenceOpacity, Mode=TwoWay}" 
                                            IsSnapToTickEnabled="True" 
                                            TickFrequency="0.05"
                                            ValueChanged="Slider_ValueChanged"/>
                                    <Border Grid.Column="1" Background="{DynamicResource Bg.Surface.Hover}" CornerRadius="4" Padding="8,4" HorizontalAlignment="Right">
                                        <TextBlock Text="{Binding FenceOpacity, StringFormat={}{0:P0}}" FontWeight="Medium" Foreground="{DynamicResource Text.Primary}"/>
                                    </Border>
                                </Grid>
                            </StackPanel>
                        </Border>

                        <!-- Card: Color Presets -->
                        <Border Style="{DynamicResource Card}" Margin="0,0,0,20">
                            <StackPanel>
                                <TextBlock Text="Color de Fences" Style="{DynamicResource Text.SubHeader}" FontSize="16"/>
                                <TextBlock Text="Elige un color para el fondo de los grupos" Style="{DynamicResource Text.Caption}" Margin="0,2,0,15"/>
                                
                                <WrapPanel>
                                    <Button Click="ColorPreset_Click" Tag="#1E293B" Margin="0,0,8,8" Cursor="Hand" ToolTip="Slate">
                                        <Button.Template>
                                            <ControlTemplate><Border Width="40" Height="40" CornerRadius="8" Background="#1E293B" BorderBrush="{DynamicResource Border.Light}" BorderThickness="2" ToolTip="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=ToolTip}"/></ControlTemplate>
                                        </Button.Template>
                                    </Button>
                                    <Button Click="ColorPreset_Click" Tag="#0F172A" Margin="0,0,8,8" Cursor="Hand" ToolTip="Dark">
                                        <Button.Template>
                                            <ControlTemplate><Border Width="40" Height="40" CornerRadius="8" Background="#0F172A" BorderBrush="{DynamicResource Border.Light}" BorderThickness="2"/></ControlTemplate>
                                        </Button.Template>
                                    </Button>
                                    <Button Click="ColorPreset_Click" Tag="#1E3A5F" Margin="0,0,8,8" Cursor="Hand" ToolTip="Navy">
                                        <Button.Template>
                                            <ControlTemplate><Border Width="40" Height="40" CornerRadius="8" Background="#1E3A5F" BorderBrush="{DynamicResource Border.Light}" BorderThickness="2"/></ControlTemplate>
                                        </Button.Template>
                                    </Button>
                                    <Button Click="ColorPreset_Click" Tag="#7C3AED" Margin="0,0,8,8" Cursor="Hand" ToolTip="Purple">
                                        <Button.Template>
                                            <ControlTemplate><Border Width="40" Height="40" CornerRadius="8" Background="#7C3AED" BorderBrush="{DynamicResource Border.Light}" BorderThickness="2"/></ControlTemplate>
                                        </Button.Template>
                                    </Button>
                                    <Button Click="ColorPreset_Click" Tag="#059669" Margin="0,0,8,8" Cursor="Hand" ToolTip="Emerald">
                                        <Button.Template>
                                            <ControlTemplate><Border Width="40" Height="40" CornerRadius="8" Background="#059669" BorderBrush="{DynamicResource Border.Light}" BorderThickness="2"/></ControlTemplate>
                                        </Button.Template>
                                    </Button>
                                    <Button Click="ColorPreset_Click" Tag="#DC2626" Margin="0,0,8,8" Cursor="Hand" ToolTip="Red">
                                        <Button.Template>
                                            <ControlTemplate><Border Width="40" Height="40" CornerRadius="8" Background="#DC2626" BorderBrush="{DynamicResource Border.Light}" BorderThickness="2"/></ControlTemplate>
                                        </Button.Template>
                                    </Button>
                                    <Button Click="ColorPreset_Click" Tag="#EA580C" Margin="0,0,8,8" Cursor="Hand" ToolTip="Orange">
                                        <Button.Template>
                                            <ControlTemplate><Border Width="40" Height="40" CornerRadius="8" Background="#EA580C" BorderBrush="{DynamicResource Border.Light}" BorderThickness="2"/></ControlTemplate>
                                        </Button.Template>
                                    </Button>
                                    <Button Click="ColorPreset_Click" Tag="#0891B2" Margin="0,0,8,8" Cursor="Hand" ToolTip="Cyan">
                                        <Button.Template>
                                            <ControlTemplate><Border Width="40" Height="40" CornerRadius="8" Background="#0891B2" BorderBrush="{DynamicResource Border.Light}" BorderThickness="2"/></ControlTemplate>
                                        </Button.Template>
                                    </Button>
                                </WrapPanel>
                                
                                <Grid Margin="0,15,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <Border Width="40" Height="40" CornerRadius="6" Margin="0,0,15,0" BorderBrush="{DynamicResource Border.Light}" BorderThickness="1">
                                        <Border.Background>
                                            <SolidColorBrush Color="{Binding FenceColorHex, FallbackValue=#1E293B}"/>
                                        </Border.Background>
                                    </Border>
                                    
                                    <TextBox x:Name="ColorInput" 
                                             Grid.Column="1" 
                                             Text="{Binding FenceColorHex, UpdateSourceTrigger=PropertyChanged}" 
                                             TextChanged="ColorInput_TextChanged"
                                             VerticalAlignment="Center" FontSize="14" Padding="10,8"
                                             Background="{DynamicResource Bg.Input}" Foreground="{DynamicResource Text.Primary}" BorderBrush="{DynamicResource Border.Input}" BorderThickness="1">
                                        <TextBox.Resources>
                                            <Style TargetType="Border"><Setter Property="CornerRadius" Value="6"/></Style>
                                        </TextBox.Resources>
                                    </TextBox>
                                </Grid>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </ScrollViewer>

                <!-- Footer -->
                <Grid Grid.Row="2" Margin="0,20,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock x:Name="UnsavedIndicator" Text="â— Cambios sin guardar" Foreground="{DynamicResource Status.Error}" VerticalAlignment="Center" FontWeight="Medium" Visibility="Collapsed"/>
                    <TextBlock Grid.Column="1" Text="{Binding StatusMessage}" Foreground="{DynamicResource Status.Success}" VerticalAlignment="Center" FontWeight="Medium" Margin="10,0,0,0"/>
                    
                    <Button Grid.Column="2" Content="Deshacer" Click="Undo_Click" Style="{DynamicResource Button.Ghost}" Margin="0,0,10,0"/>
                    
                    <Button Grid.Column="3" Content="ðŸ’¾  Guardar" Command="{Binding SavePreferencesCommand}"/>
                </Grid>
            </Grid>
            
            <!-- Rules Panel -->
            <Grid x:Name="RulesPanel" Margin="40" Visibility="Collapsed">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <StackPanel>
                    <TextBlock Text="GestiÃ³n de Reglas" Style="{DynamicResource Text.Header}"/>
                    <TextBlock Text="Configura cÃ³mo se organizan tus archivos mediante el editor avanzado." Style="{DynamicResource Text.SubHeader}" FontSize="14" Margin="0,5,0,0"/>
                </StackPanel>

                <StackPanel Grid.Row="1" Margin="0,40,0,0">
                    <Border Style="{DynamicResource Card}" Padding="30">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="200"/>
                            </Grid.ColumnDefinitions>
                            
                            <StackPanel Margin="0,0,20,0">
                                <TextBlock Text="âš¡ Editor Avanzado de Reglas" Style="{DynamicResource Text.SubHeader}" FontWeight="SemiBold"/>
                                <TextBlock Text="Define extensiones, patrones de nombres y categorÃ­as. Incluye modo de simulaciÃ³n (Dry Run) para probar tus reglas antes de aplicarlas." 
                                           Style="{DynamicResource Text.Caption}" TextWrapping="Wrap" Margin="0,10,0,0" FontSize="14"/>
                            </StackPanel>
                            
                            <Button Grid.Column="1" Content="Abrir Editor" Command="{Binding OpenRuleEditorCommand}" Height="40" FontSize="14"/>
                        </Grid>
                    </Border>

                    <Border Style="{DynamicResource Card}" Padding="30" Margin="0,20,0,0">
                        <StackPanel>
                            <TextBlock Text="â„¹ï¸ Â¿CÃ³mo funciona?" Style="{DynamicResource Text.SubHeader}" FontWeight="SemiBold"/>
                            <TextBlock Text="â€¢ Las reglas se ejecutan en orden de prioridad." Style="{DynamicResource Text.Caption}" Margin="0,10,0,0"/>
                            <TextBlock Text="â€¢ Puedes crear 'Fences' que coincidan con los nombres de las categorÃ­as." Style="{DynamicResource Text.Caption}" Margin="0,5,0,0"/>
                            <TextBlock Text="â€¢ Usa la pestaÃ±a 'SimulaciÃ³n' en el editor para verificar cambios sin riesgos." Style="{DynamicResource Text.Caption}" Margin="0,5,0,0"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Grid>
        </Grid>
    </Grid>
</Window>
