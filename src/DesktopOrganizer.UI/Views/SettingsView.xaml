<Window x:Class="DesktopOrganizer.UI.Views.SettingsView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Desktop Organizer - ConfiguraciÃ³n" Height="600" Width="800"
        WindowStartupLocation="CenterScreen"
        Background="#F8FAFC"
        ResizeMode="CanResize"
        MinWidth="700" MinHeight="500"
        WindowStyle="SingleBorderWindow"
        Closing="Window_Closing">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="180"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Sidebar -->
        <Border Background="#1E293B">
            <StackPanel Margin="0,30">
                <!-- Logo/Title -->
                <TextBlock Text="ðŸ—‚ï¸ Desktop" FontSize="18" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center" Margin="0,0,0,5"/>
                <TextBlock Text="Organizer" FontSize="14" Foreground="#94A3B8" HorizontalAlignment="Center" Margin="0,0,0,30"/>
                
                <Border Height="1" Background="#334155" Margin="20,0,20,20"/>
                
                <TextBlock Text="AJUSTES" FontSize="11" FontWeight="Bold" Foreground="#64748B" Margin="20,0,0,10"/>
                
                <!-- Menu Items as Radio Buttons -->
                <RadioButton x:Name="TabPersonalization" GroupName="Tabs" IsChecked="True" Checked="Tab_Checked">
                    <RadioButton.Template>
                        <ControlTemplate TargetType="RadioButton">
                            <Border x:Name="bg" Background="Transparent" Padding="15,12" Margin="10,2" Cursor="Hand">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="ðŸŽ¨" FontSize="14" Margin="0,0,10,0"/>
                                    <TextBlock x:Name="txt" Text="PersonalizaciÃ³n" Foreground="#94A3B8" FontSize="13"/>
                                </StackPanel>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsChecked" Value="True">
                                    <Setter TargetName="bg" Property="Background" Value="#334155"/>
                                    <Setter TargetName="txt" Property="Foreground" Value="White"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </RadioButton.Template>
                </RadioButton>
                
                <RadioButton x:Name="TabCategories" GroupName="Tabs" Checked="Tab_Checked">
                    <RadioButton.Template>
                        <ControlTemplate TargetType="RadioButton">
                            <Border x:Name="bg" Background="Transparent" Padding="15,12" Margin="10,2" Cursor="Hand">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="ðŸ“" FontSize="14" Margin="0,0,10,0"/>
                                    <TextBlock x:Name="txt" Text="CategorÃ­as" Foreground="#94A3B8" FontSize="13"/>
                                </StackPanel>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsChecked" Value="True">
                                    <Setter TargetName="bg" Property="Background" Value="#334155"/>
                                    <Setter TargetName="txt" Property="Foreground" Value="White"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </RadioButton.Template>
                </RadioButton>
            </StackPanel>
        </Border>

        <!-- Content Panels -->
        <Grid Grid.Column="1">
            <!-- Personalization Panel -->
            <Grid x:Name="PersonalizationPanel" Margin="30">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <StackPanel>
                    <TextBlock Text="PersonalizaciÃ³n de Fences" FontSize="22" FontWeight="SemiBold" Foreground="#1E293B"/>
                    <TextBlock Text="Los cambios se aplican en tiempo real" FontSize="13" Foreground="#10B981" Margin="0,5,0,0"/>
                </StackPanel>

                <ScrollViewer Grid.Row="1" Margin="0,25,0,0" VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <!-- Card: Opacity -->
                        <Border Background="White" CornerRadius="8" Padding="20" Margin="0,0,0,15">
                            <Border.Effect>
                                <DropShadowEffect Color="#000000" BlurRadius="10" Opacity="0.05" ShadowDepth="2"/>
                            </Border.Effect>
                            <StackPanel>
                                <TextBlock Text="Opacidad del Fondo" FontWeight="SemiBold" FontSize="14" Foreground="#1E293B"/>
                                <TextBlock Text="Controla la transparencia del Ã¡rea de contenido" FontSize="12" Foreground="#64748B" Margin="0,2,0,15"/>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="70"/>
                                    </Grid.ColumnDefinitions>
                                    <Slider x:Name="OpacitySlider" 
                                            Minimum="0.3" Maximum="1.0" 
                                            Value="{Binding FenceOpacity, Mode=TwoWay}" 
                                            IsSnapToTickEnabled="True" 
                                            TickFrequency="0.05"
                                            ValueChanged="Slider_ValueChanged"/>
                                    <Border Grid.Column="1" Background="#E2E8F0" CornerRadius="4" Padding="8,4" HorizontalAlignment="Right">
                                        <TextBlock Text="{Binding FenceOpacity, StringFormat={}{0:P0}}" FontWeight="Medium" Foreground="#1E293B"/>
                                    </Border>
                                </Grid>
                            </StackPanel>
                        </Border>

                        <!-- Card: Color Presets -->
                        <Border Background="White" CornerRadius="8" Padding="20" Margin="0,0,0,15">
                            <Border.Effect>
                                <DropShadowEffect Color="#000000" BlurRadius="10" Opacity="0.05" ShadowDepth="2"/>
                            </Border.Effect>
                            <StackPanel>
                                <TextBlock Text="Color del Fondo" FontWeight="SemiBold" FontSize="14" Foreground="#1E293B"/>
                                <TextBlock Text="Elige un color predefinido o introduce uno personalizado" FontSize="12" Foreground="#64748B" Margin="0,2,0,15"/>
                                
                                <WrapPanel>
                                    <Button Click="ColorPreset_Click" Tag="#1E293B" Margin="0,0,8,8" Cursor="Hand" ToolTip="Slate">
                                        <Button.Template>
                                            <ControlTemplate><Border Width="40" Height="40" CornerRadius="8" Background="#1E293B" BorderBrush="#CBD5E1" BorderThickness="2"/></ControlTemplate>
                                        </Button.Template>
                                    </Button>
                                    <Button Click="ColorPreset_Click" Tag="#0F172A" Margin="0,0,8,8" Cursor="Hand" ToolTip="Dark">
                                        <Button.Template>
                                            <ControlTemplate><Border Width="40" Height="40" CornerRadius="8" Background="#0F172A" BorderBrush="#CBD5E1" BorderThickness="2"/></ControlTemplate>
                                        </Button.Template>
                                    </Button>
                                    <Button Click="ColorPreset_Click" Tag="#1E3A5F" Margin="0,0,8,8" Cursor="Hand" ToolTip="Navy">
                                        <Button.Template>
                                            <ControlTemplate><Border Width="40" Height="40" CornerRadius="8" Background="#1E3A5F" BorderBrush="#CBD5E1" BorderThickness="2"/></ControlTemplate>
                                        </Button.Template>
                                    </Button>
                                    <Button Click="ColorPreset_Click" Tag="#7C3AED" Margin="0,0,8,8" Cursor="Hand" ToolTip="Purple">
                                        <Button.Template>
                                            <ControlTemplate><Border Width="40" Height="40" CornerRadius="8" Background="#7C3AED" BorderBrush="#CBD5E1" BorderThickness="2"/></ControlTemplate>
                                        </Button.Template>
                                    </Button>
                                    <Button Click="ColorPreset_Click" Tag="#059669" Margin="0,0,8,8" Cursor="Hand" ToolTip="Emerald">
                                        <Button.Template>
                                            <ControlTemplate><Border Width="40" Height="40" CornerRadius="8" Background="#059669" BorderBrush="#CBD5E1" BorderThickness="2"/></ControlTemplate>
                                        </Button.Template>
                                    </Button>
                                    <Button Click="ColorPreset_Click" Tag="#DC2626" Margin="0,0,8,8" Cursor="Hand" ToolTip="Red">
                                        <Button.Template>
                                            <ControlTemplate><Border Width="40" Height="40" CornerRadius="8" Background="#DC2626" BorderBrush="#CBD5E1" BorderThickness="2"/></ControlTemplate>
                                        </Button.Template>
                                    </Button>
                                    <Button Click="ColorPreset_Click" Tag="#EA580C" Margin="0,0,8,8" Cursor="Hand" ToolTip="Orange">
                                        <Button.Template>
                                            <ControlTemplate><Border Width="40" Height="40" CornerRadius="8" Background="#EA580C" BorderBrush="#CBD5E1" BorderThickness="2"/></ControlTemplate>
                                        </Button.Template>
                                    </Button>
                                    <Button Click="ColorPreset_Click" Tag="#0891B2" Margin="0,0,8,8" Cursor="Hand" ToolTip="Cyan">
                                        <Button.Template>
                                            <ControlTemplate><Border Width="40" Height="40" CornerRadius="8" Background="#0891B2" BorderBrush="#CBD5E1" BorderThickness="2"/></ControlTemplate>
                                        </Button.Template>
                                    </Button>
                                </WrapPanel>
                                
                                <Grid Margin="0,15,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <Border Width="40" Height="40" CornerRadius="6" Margin="0,0,15,0" BorderBrush="#E2E8F0" BorderThickness="1">
                                        <Border.Background>
                                            <SolidColorBrush Color="{Binding FenceColorHex, FallbackValue=#1E293B}"/>
                                        </Border.Background>
                                    </Border>
                                    
                                    <TextBox x:Name="ColorInput" 
                                             Grid.Column="1" 
                                             Text="{Binding FenceColorHex, UpdateSourceTrigger=PropertyChanged}" 
                                             TextChanged="ColorInput_TextChanged"
                                             VerticalAlignment="Center" FontSize="14" Padding="10,8"
                                             Background="#F1F5F9" BorderBrush="#E2E8F0" BorderThickness="1">
                                        <TextBox.Resources>
                                            <Style TargetType="Border"><Setter Property="CornerRadius" Value="6"/></Style>
                                        </TextBox.Resources>
                                    </TextBox>
                                </Grid>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </ScrollViewer>

                <!-- Footer -->
                <Grid Grid.Row="2" Margin="0,20,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock x:Name="UnsavedIndicator" Text="â— Cambios sin guardar" Foreground="#F59E0B" VerticalAlignment="Center" FontWeight="Medium" Visibility="Collapsed"/>
                    <TextBlock Grid.Column="1" Text="{Binding StatusMessage}" Foreground="#10B981" VerticalAlignment="Center" FontWeight="Medium" Margin="10,0,0,0"/>
                    
                    <Button Grid.Column="2" Content="Deshacer" Click="Undo_Click" Padding="15,10" Background="#E2E8F0" Foreground="#475569" BorderThickness="0" Cursor="Hand" Margin="0,0,10,0">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border x:Name="bg" Background="{TemplateBinding Background}" CornerRadius="6" Padding="{TemplateBinding Padding}">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True"><Setter TargetName="bg" Property="Background" Value="#CBD5E1"/></Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                    
                    <Button Grid.Column="3" Content="ðŸ’¾  Guardar" Command="{Binding SaveCommand}" Padding="20,12" Background="#3B82F6" Foreground="White" BorderThickness="0" Cursor="Hand" FontWeight="SemiBold">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border x:Name="bg" Background="{TemplateBinding Background}" CornerRadius="8" Padding="{TemplateBinding Padding}">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True"><Setter TargetName="bg" Property="Background" Value="#2563EB"/></Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </Grid>
            </Grid>
            
            <!-- Categories Panel -->
            <Grid x:Name="CategoriesPanel" Margin="30" Visibility="Collapsed">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <StackPanel>
                    <TextBlock Text="CategorÃ­as y Reglas" FontSize="22" FontWeight="SemiBold" Foreground="#1E293B"/>
                    <TextBlock Text="Define quÃ© extensiones pertenecen a cada categorÃ­a" FontSize="13" Foreground="#64748B" Margin="0,5,0,0"/>
                </StackPanel>

                <ScrollViewer Grid.Row="1" Margin="0,25,0,0" VerticalScrollBarVisibility="Auto">
                    <StackPanel x:Name="CategoriesList">
                        <!-- Categories will be populated dynamically -->
                    </StackPanel>
                </ScrollViewer>
            </Grid>
        </Grid>
    </Grid>
</Window>
