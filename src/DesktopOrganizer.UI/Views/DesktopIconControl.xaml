<UserControl x:Class="DesktopOrganizer.UI.Views.DesktopIconControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="80">
    <Grid x:Name="MainGrid" Background="Transparent" VerticalAlignment="Top" HorizontalAlignment="Center" Width="74">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <Border x:Name="SelectionBorder" 
                Grid.RowSpan="2" 
                CornerRadius="4" 
                Background="Transparent" 
                BorderThickness="1" 
                BorderBrush="Transparent"/>

        <Image Source="{Binding Icon}" Width="36" Height="36" Margin="0,8,0,4" Grid.Row="0" HorizontalAlignment="Center"/>
        
        <TextBlock Text="{Binding Name}" 
                   Grid.Row="1" 
                   Foreground="White" 
                   FontSize="11" 
                   TextAlignment="Center" 
                   TextWrapping="Wrap" 
                   TextTrimming="CharacterEllipsis"
                   MaxHeight="32" 
                   Margin="4,0,4,8"
                   HorizontalAlignment="Center">
            <TextBlock.Effect>
                <DropShadowEffect Color="Black" BlurRadius="2" ShadowDepth="1" Opacity="0.8"/>
            </TextBlock.Effect>
        </TextBlock>
    </Grid>
</UserControl>
