<Window x:Class="DesktopOrganizer.UI.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DesktopOrganizer.UI.Views"
        mc:Ignorable="d"
        Title="Desktop Organizer" Height="600" Width="900"
        Background="{DynamicResource Bg.Primary}"
        WindowStartupLocation="CenterScreen">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Background="{DynamicResource Bg.Secondary}" Padding="30,20" BorderBrush="{DynamicResource Border.Light}" BorderThickness="0,0,0,1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <!-- Logo/Icon -->
                <Ellipse Width="50" Height="50" Fill="{DynamicResource Brand.Primary}" Margin="0,0,15,0">
                    <Ellipse.Effect>
                        <DropShadowEffect Color="{DynamicResource Shadow.Color}" BlurRadius="10" Opacity="0.2"/>
                    </Ellipse.Effect>
                </Ellipse>
                
                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                    <TextBlock Text="Desktop Organizer" Style="{DynamicResource Text.Header}"/>
                    <TextBlock Text="MantÃ©n tu escritorio ordenado automÃ¡ticamente" Style="{DynamicResource Text.Caption}" FontSize="13" Margin="0,2,0,0"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="30">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Status Card -->
            <Border Style="{DynamicResource Card}" Margin="0,0,0,20">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Status Indicator -->
                    <Ellipse Width="12" Height="12" Margin="0,0,12,0">
                        <Ellipse.Style>
                            <Style TargetType="Ellipse">
                                <Setter Property="Fill" Value="{DynamicResource Status.Success}"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsMonitoring}" Value="False">
                                        <Setter Property="Fill" Value="{DynamicResource Text.Muted}"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Ellipse.Style>
                    </Ellipse>

                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <TextBlock Text="{Binding StatusMessage}" FontSize="15" FontWeight="SemiBold" Foreground="{DynamicResource Text.Primary}"/>
                        <TextBlock Text="El monitoreo estÃ¡ activo y organizando archivos automÃ¡ticamente" 
                                   Margin="0,4,0,0">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock" BasedOn="{StaticResource Text.Caption}">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsMonitoring}" Value="False">
                                            <Setter Property="Text" Value="Haz clic en 'Iniciar Monitoreo' para comenzar"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </StackPanel>

                    <!-- Main Action Button -->
                    <Button Grid.Column="2" 
                            Content="{Binding StartStopButtonText}"
                            Command="{Binding ToggleMonitoringCommand}"
                            MinWidth="160"/>
                </Grid>
            </Border>

            <!-- Action Cards -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Manage Rules Card -->
                <Border Style="{DynamicResource Card}" Margin="0,0,10,0">
                    <StackPanel>
                        <Border Width="48" Height="48" CornerRadius="24" Background="{DynamicResource Brand.Bg}" HorizontalAlignment="Left" Margin="0,0,0,12">
                             <TextBlock Text="âš™ï¸" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20"/>
                        </Border>
                        <TextBlock Text="Gestionar Reglas" Style="{DynamicResource Text.SubHeader}" FontSize="16" Margin="0,0,0,6"/>
                        <TextBlock Text="Configura cÃ³mo organizar tus archivos" Style="{DynamicResource Text.Caption}" TextWrapping="Wrap" Margin="0,0,0,16"/>
                        <Button Content="Abrir Editor" 
                                Command="{Binding OpenRuleEditorCommand}"
                                Style="{DynamicResource Button.Secondary}"
                                HorizontalAlignment="Stretch"/>
                    </StackPanel>
                </Border>

                <!-- View Logs Card -->
                <Border Grid.Column="1" Style="{DynamicResource Card}" Margin="5,0,5,0">
                    <StackPanel>
                        <Border Width="48" Height="48" CornerRadius="24" Background="{DynamicResource Brand.Bg}" HorizontalAlignment="Left" Margin="0,0,0,12">
                             <TextBlock Text="ðŸ“‹" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20"/>
                        </Border>
                        <TextBlock Text="Ver Historial" Style="{DynamicResource Text.SubHeader}" FontSize="16" Margin="0,0,0,6"/>
                        <TextBlock Text="Revisa las operaciones realizadas" Style="{DynamicResource Text.Caption}" TextWrapping="Wrap" Margin="0,0,0,16"/>
                        <Button Content="Ver Logs" 
                                Command="{Binding OpenLogsCommand}"
                                Style="{DynamicResource Button.Secondary}"
                                HorizontalAlignment="Stretch"/>
                    </StackPanel>
                </Border>

                <!-- Settings Card -->
                <Border Grid.Column="2" Style="{DynamicResource Card}" Margin="10,0,0,0">
                    <StackPanel>
                         <Border Width="48" Height="48" CornerRadius="24" Background="{DynamicResource Brand.Bg}" HorizontalAlignment="Left" Margin="0,0,0,12">
                             <TextBlock Text="ðŸ”§" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20"/>
                        </Border>
                        <TextBlock Text="ConfiguraciÃ³n" Style="{DynamicResource Text.SubHeader}" FontSize="16" Margin="0,0,0,6"/>
                        <TextBlock Text="Ajusta las carpetas monitoreadas" Style="{DynamicResource Text.Caption}" TextWrapping="Wrap" Margin="0,0,0,16"/>
                        <Button Content="Configurar" 
                                Command="{Binding OpenSettingsCommand}"
                                Style="{DynamicResource Button.Secondary}"
                                HorizontalAlignment="Stretch"/>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- Fences Management Panel -->
            <Border Grid.Row="2" Style="{DynamicResource Card}" Margin="0,20,0,0" Background="{DynamicResource Bg.Surface.Hover}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                        <TextBlock Text="ðŸ“ Fences Activos" Style="{DynamicResource Text.SubHeader}" FontSize="16"/>
                        <TextBlock Text="(Edita las extensiones para cambiar las reglas)" Style="{DynamicResource Text.Caption}" VerticalAlignment="Center" Margin="10,0,0,0"/>
                    </StackPanel>

                    <ListBox Grid.Row="1" ItemsSource="{Binding Fences}" 
                             Background="Transparent" BorderThickness="0"
                             ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                             Height="180">
                        <ListBox.ItemContainerStyle>
                            <Style TargetType="ListBoxItem">
                                <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                <Setter Property="Padding" Value="0,4"/>
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="ListBoxItem">
                                            <ContentPresenter/>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </ListBox.ItemContainerStyle>
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="0,0,0,8">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="150"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="80"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <TextBlock Text="{Binding Name}" FontWeight="Medium" VerticalAlignment="Center" Foreground="{DynamicResource Text.Primary}"/>
                                    
                                    <TextBox Grid.Column="1" Text="{Binding Extensions, UpdateSourceTrigger=PropertyChanged}" 
                                             Margin="10,0" Padding="8,4" VerticalContentAlignment="Center"
                                             Background="{DynamicResource Bg.Input}" Foreground="{DynamicResource Text.Primary}" BorderBrush="{DynamicResource Border.Input}" BorderThickness="1">
                                        <TextBox.Resources>
                                            <Style TargetType="Border">
                                                <Setter Property="CornerRadius" Value="4"/>
                                            </Style>
                                        </TextBox.Resources>
                                    </TextBox>
                                    
                                    <Button Grid.Column="2" Content="Guardar" 
                                            Command="{Binding DataContext.SaveRulesCommand, RelativeSource={RelativeSource AncestorType=Window}}" 
                                            CommandParameter="{Binding}"
                                            Style="{DynamicResource Button.Ghost}"
                                            Padding="10,4">
                                    </Button>
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>
