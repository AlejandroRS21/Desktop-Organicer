<Window x:Class="DesktopOrganizer.UI.Views.FenceWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="{Binding Title}" 
        Height="300" Width="250"
        MinHeight="60" MinWidth="120"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ShowInTaskbar="False"
        ResizeMode="NoResize"
        AllowDrop="True"
        DragOver="Window_DragOver"
        Drop="Window_Drop">

    <!-- Context Menu -->
    <Window.ContextMenu>
        <ContextMenu>
            <MenuItem Header="âœï¸ Renombrar" Click="ContextMenu_Rename"/>
            <MenuItem Header="ðŸ”„ Minimizar/Expandir" Click="ContextMenu_ToggleRollUp"/>
            <Separator/>
            <MenuItem Header="ðŸ—‘ï¸ Eliminar Fence" Click="ContextMenu_Delete" Foreground="#DC2626"/>
        </ContextMenu>
    </Window.ContextMenu>

    <Grid>
        <!-- Resize handles (all sides except top) -->
        <Rectangle x:Name="ResizeLeft" Width="6" HorizontalAlignment="Left" Cursor="SizeWE" 
                   Fill="Transparent" MouseLeftButtonDown="ResizeHandle_MouseDown" Tag="Left"/>
        <Rectangle x:Name="ResizeRight" Width="6" HorizontalAlignment="Right" Cursor="SizeWE" 
                   Fill="Transparent" MouseLeftButtonDown="ResizeHandle_MouseDown" Tag="Right"/>
        <Rectangle x:Name="ResizeBottom" Height="6" VerticalAlignment="Bottom" Cursor="SizeNS" 
                   Fill="Transparent" MouseLeftButtonDown="ResizeHandle_MouseDown" Tag="Bottom"/>
        <Rectangle x:Name="ResizeBottomLeft" Width="12" Height="12" HorizontalAlignment="Left" VerticalAlignment="Bottom" 
                   Cursor="SizeNESW" Fill="Transparent" MouseLeftButtonDown="ResizeHandle_MouseDown" Tag="BottomLeft"/>
        <Rectangle x:Name="ResizeBottomRight" Width="12" Height="12" HorizontalAlignment="Right" VerticalAlignment="Bottom" 
                   Cursor="SizeNWSE" Fill="Transparent" MouseLeftButtonDown="ResizeHandle_MouseDown" Tag="BottomRight"/>

        <!-- Main container -->
        <Border CornerRadius="10" 
                BorderBrush="#40FFFFFF" 
                BorderThickness="1"
                Margin="4">
            <Border.Effect>
                <DropShadowEffect Color="Black" BlurRadius="15" Opacity="0.3" ShadowDepth="3"/>
            </Border.Effect>
            
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Header - FULL OPACITY -->
                <Border Grid.Row="0" 
                        Background="{Binding HeaderColor}" 
                        CornerRadius="10,10,0,0" 
                        Padding="10,10" 
                        MouseLeftButtonDown="Header_MouseLeftButtonDown">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <!-- File count badge -->
                        <Border Grid.Column="0" Background="#50FFFFFF" CornerRadius="10" Padding="7,3" Margin="0,0,10,0">
                            <TextBlock Text="{Binding Files.Count}" 
                                       Foreground="White" 
                                       FontSize="11" 
                                       FontWeight="Bold"/>
                        </Border>
                        
                        <!-- Editable Title -->
                        <TextBlock x:Name="TitleText"
                                   Grid.Column="1" 
                                   Text="{Binding Title}" 
                                   Foreground="White" 
                                   FontWeight="SemiBold" 
                                   FontSize="13"
                                   VerticalAlignment="Center"
                                   TextTrimming="CharacterEllipsis"
                                   MouseLeftButtonDown="TitleText_MouseLeftButtonDown"
                                   Cursor="Hand"
                                   ToolTip="Doble clic para editar"/>
                        
                        <!-- Editable TextBox -->
                        <TextBox x:Name="TitleEdit"
                                 Grid.Column="1"
                                 Text="{Binding Title, UpdateSourceTrigger=PropertyChanged}"
                                 Foreground="White"
                                 Background="#30000000"
                                 BorderThickness="0"
                                 FontWeight="SemiBold"
                                 FontSize="13"
                                 VerticalAlignment="Center"
                                 Visibility="Collapsed"
                                 KeyDown="TitleEdit_KeyDown"
                                 LostFocus="TitleEdit_LostFocus"/>
                        
                        <!-- Roll-up button -->
                        <Button Grid.Column="2" 
                                x:Name="RollUpButton"
                                Content="â–²" 
                                Foreground="White" 
                                Background="#40FFFFFF" 
                                BorderThickness="0"
                                FontSize="10"
                                Width="24" Height="24"
                                Click="RollUpButton_Click"
                                Cursor="Hand"
                                ToolTip="Minimizar/Expandir"
                                Margin="0,0,4,0">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border x:Name="bg" Background="{TemplateBinding Background}" CornerRadius="4" Padding="4">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="bg" Property="Background" Value="#60FFFFFF"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                        
                        <!-- Close button -->
                        <Button Grid.Column="3" 
                                Content="âœ•" 
                                Foreground="White" 
                                Background="#60FF6B6B" 
                                BorderThickness="0"
                                FontSize="10"
                                Width="24" Height="24"
                                Click="CloseButton_Click"
                                Cursor="Hand"
                                ToolTip="Cerrar Fence">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border x:Name="bg" Background="{TemplateBinding Background}" CornerRadius="4" Padding="4">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="bg" Property="Background" Value="#FF6B6B"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </Grid>
                </Border>

                <!-- Body with opacity -->
                <Border Grid.Row="1" 
                        Background="{Binding HexColor}" 
                        Opacity="{Binding Opacity}"
                        CornerRadius="0,0,10,10"/>
                
                <!-- Content -->
                <!-- Content -->
                <ListBox Grid.Row="1" 
                         x:Name="ContentListBox"
                         ItemsSource="{Binding Files}"
                         Background="Transparent" 
                         BorderThickness="0"
                         ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                         ScrollViewer.VerticalScrollBarVisibility="Auto"
                         SelectionMode="Extended"
                         Margin="5,5,5,5">
                    
                    <ListBox.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel Orientation="Horizontal"/>
                        </ItemsPanelTemplate>
                    </ListBox.ItemsPanel>

                    <ListBox.ItemContainerStyle>
                        <Style TargetType="ListBoxItem">
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="Padding" Value="0"/>
                            <Setter Property="Margin" Value="0"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="ListBoxItem">
                                        <Border Background="{TemplateBinding Background}" 
                                                BorderBrush="{TemplateBinding BorderBrush}" 
                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                CornerRadius="5" Margin="1">
                                            <ContentPresenter/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsSelected" Value="True">
                                                <Setter Property="Background" Value="#40FFFFFF"/>
                                            </Trigger>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#25FFFFFF"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ListBox.ItemContainerStyle>

                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Border Width="70" Height="80" Background="Transparent" ToolTip="{Binding Name}" Margin="2">
                                <Border.InputBindings>
                                    <MouseBinding MouseAction="LeftDoubleClick" 
                                                  Command="{Binding DataContext.OpenCommand, RelativeSource={RelativeSource AncestorType=Window}}" 
                                                  CommandParameter="{Binding}"/>
                                </Border.InputBindings>
                                
                                <Border.ContextMenu>
                                    <ContextMenu>
                                        <MenuItem Header="Abrir" Command="{Binding DataContext.OpenCommand, RelativeSource={RelativeSource AncestorType=Window}}" CommandParameter="{Binding}">
                                            <MenuItem.Icon><TextBlock Text="ðŸ“‚"/></MenuItem.Icon>
                                        </MenuItem>
                                        <MenuItem Header="Abrir ubicaciÃ³n" Command="{Binding DataContext.ShowInExplorerCommand, RelativeSource={RelativeSource AncestorType=Window}}" CommandParameter="{Binding}">
                                            <MenuItem.Icon><TextBlock Text="ðŸ“"/></MenuItem.Icon>
                                        </MenuItem>
                                        <Separator/>
                                        <MenuItem Header="Copiar" Command="{Binding DataContext.CopyCommand, RelativeSource={RelativeSource AncestorType=Window}}" CommandParameter="{Binding}">
                                            <MenuItem.Icon><TextBlock Text="ðŸ“‹"/></MenuItem.Icon>
                                        </MenuItem>
                                        <MenuItem Header="Eliminar" Command="{Binding DataContext.DeleteCommand, RelativeSource={RelativeSource AncestorType=Window}}" CommandParameter="{Binding}" Foreground="#DC2626">
                                            <MenuItem.Icon><TextBlock Text="ðŸ—‘ï¸"/></MenuItem.Icon>
                                        </MenuItem>
                                    </ContextMenu>
                                </Border.ContextMenu>

                                <Grid MouseMove="File_MouseMove" Background="Transparent">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    
                                    <Image Source="{Binding Icon}" Width="36" Height="36" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                    
                                    <TextBlock Grid.Row="1" 
                                               Text="{Binding Name}" 
                                               Foreground="White" 
                                               FontSize="10" 
                                               TextTrimming="CharacterEllipsis" 
                                               TextAlignment="Center"
                                               HorizontalAlignment="Center"
                                               Margin="2,2,2,4"
                                               MaxWidth="66">
                                        <TextBlock.Effect>
                                            <DropShadowEffect Color="Black" BlurRadius="3" Opacity="0.5" ShadowDepth="1"/>
                                        </TextBlock.Effect>
                                    </TextBlock>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
                
                <!-- Empty state -->
                <TextBlock Grid.Row="1" 
                           Text="Arrastra archivos aquÃ­"
                           Foreground="#80FFFFFF"
                           FontSize="11"
                           FontStyle="Italic"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           Visibility="{Binding IsEmpty, FallbackValue=Collapsed}"/>
            </Grid>
        </Border>
    </Grid>
</Window>
