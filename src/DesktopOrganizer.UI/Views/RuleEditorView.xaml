<Window x:Class="DesktopOrganizer.UI.Views.RuleEditorView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Gestor de Reglas" Height="600" Width="950"
        Background="{DynamicResource Bg.Primary}"
        WindowStartupLocation="CenterScreen">
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <!-- Sidebar: Rule List -->
        <Border Grid.RowSpan="2" Background="{DynamicResource Bg.Secondary}" BorderBrush="{DynamicResource Border.Light}" BorderThickness="0,0,1,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <!-- Sidebar Header -->
                <StackPanel Margin="20,20,20,10">
                    <TextBlock Text="âš™ï¸ Reglas" Style="{DynamicResource Text.Header}" FontSize="18"/>
                    <TextBlock Text="Gestiona cÃ³mo se organizan tus archivos" Style="{DynamicResource Text.Caption}" Margin="0,5,0,0"/>
                </StackPanel>
                
                <!-- Toolbar -->
                <Grid Grid.Row="1" Margin="15,0,15,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Button Content="âž• Nueva Regla" Command="{Binding AddRuleCommand}" Style="{DynamicResource Button.Ghost}" HorizontalAlignment="Left" Padding="8,5"/>
                    <Button Grid.Column="1" Content="ðŸ”„" Command="{Binding LoadRulesCommand}" Style="{DynamicResource Button.Ghost}" Padding="8,5" ToolTip="Actualizar"/>
                </Grid>
                
                <!-- List -->
                <ListBox Grid.Row="2" ItemsSource="{Binding Rules}" SelectedItem="{Binding SelectedRule}" 
                         Background="Transparent" BorderThickness="0" Margin="0,10,0,0"
                         ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                    <ListBox.ItemContainerStyle>
                        <Style TargetType="ListBoxItem">
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="ListBoxItem">
                                        <Border x:Name="bd" Background="{TemplateBinding Background}" Padding="20,12" BorderBrush="{DynamicResource Border.Light}" BorderThickness="0,0,0,1" Cursor="Hand">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                <StackPanel>
                                                    <TextBlock Text="{Binding Name}" FontWeight="SemiBold" Foreground="{DynamicResource Text.Primary}"/>
                                                    <TextBlock Text="{Binding TargetCategory}" FontSize="12" Foreground="{DynamicResource Text.Secondary}" Margin="0,2,0,0"/>
                                                </StackPanel>
                                                <TextBlock Grid.Column="1" Text="Activo" Foreground="{DynamicResource Status.Success}" FontSize="11" VerticalAlignment="Center" Visibility="{Binding IsActive, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                            </Grid>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsSelected" Value="True">
                                                <Setter TargetName="bd" Property="Background" Value="{DynamicResource Brand.Bg}"/>
                                            </Trigger>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="bd" Property="Background" Value="{DynamicResource Bg.Surface.Hover}"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ListBox.ItemContainerStyle>
                </ListBox>
            </Grid>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TabControl Margin="20" BorderThickness="0" Background="Transparent" SelectedIndex="0">
                <TabControl.Resources>
                    <Style TargetType="TabItem">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="TabItem">
                                    <Border Name="Border" BorderThickness="0,0,0,2" BorderBrush="Transparent" Margin="0,0,20,0" Padding="10,5" Cursor="Hand">
                                        <TextBlock Text="{TemplateBinding Header}" FontSize="14" FontWeight="Medium" Foreground="{DynamicResource Text.Secondary}"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter TargetName="Border" Property="BorderBrush" Value="{DynamicResource Brand.Primary}"/>
                                            <Setter Property="Foreground" Value="{DynamicResource Text.Primary}"/>
                                        </Trigger>
                                        <Trigger Property="IsSelected" Value="False">
                                            <Setter Property="Foreground" Value="{DynamicResource Text.Secondary}"/>
                                        </Trigger>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Foreground" Value="{DynamicResource Text.Primary}"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </TabControl.Resources>

                <!-- TAB 0: Templates (New) -->
                <TabItem Header="Plantillas">
                    <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="0,20,0,0">
                        <StackPanel>
                            <TextBlock Text="Plantillas de OrganizaciÃ³n" Style="{DynamicResource Text.Header}"/>
                            <TextBlock Text="Aplica conjuntos de reglas predefinidos para comenzar rÃ¡pidamente." Style="{DynamicResource Text.SubHeader}" FontSize="14" Margin="0,5,0,30"/>

                            <ItemsControl ItemsSource="{Binding Templates}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Style="{DynamicResource Card}" Margin="0,0,0,15" Padding="20">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                
                                                <StackPanel>
                                                    <TextBlock Text="{Binding Name}" Style="{DynamicResource Text.SubHeader}" FontSize="16" FontWeight="Bold"/>
                                                    <TextBlock Text="{Binding Description}" Style="{DynamicResource Text.Caption}" Margin="0,5,0,0" TextWrapping="Wrap"/>
                                                    <TextBlock Text="{Binding Rules.Count, StringFormat='Incluye {0} reglas'}" FontSize="12" Foreground="{DynamicResource Text.Muted}" Margin="0,8,0,0"/>
                                                </StackPanel>
                                                
                                                <Button Grid.Column="1" Content="Aplicar Plantilla" 
                                                        Command="{Binding DataContext.ApplyTemplateCommand, RelativeSource={RelativeSource AncestorType=Window}}" 
                                                        CommandParameter="{Binding}"
                                                        Padding="15,8" VerticalAlignment="Center" Margin="20,0,0,0"/>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </ScrollViewer>
                </TabItem>

                <!-- TAB 1: Editor -->
                <TabItem Header="Editar Regla">
                    <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="0,20,0,0">
                        <StackPanel>
                            <TextBlock Text="Detalles de la Regla" Style="{DynamicResource Text.Header}"/>
                            <TextBlock Text="Configura los criterios de organizaciÃ³n para esta regla" Style="{DynamicResource Text.SubHeader}" FontSize="14" Margin="0,5,0,30"/>
                            
                            <Border Style="{DynamicResource Card}" Padding="30">
                                <StackPanel DataContext="{Binding SelectedRule}">
                                    
                                    <StackPanel.Resources>
                                        <Style TargetType="TextBox">
                                            <Setter Property="Padding" Value="10,8"/>
                                            <Setter Property="Background" Value="{DynamicResource Bg.Input}"/>
                                            <Setter Property="Foreground" Value="{DynamicResource Text.Primary}"/>
                                            <Setter Property="BorderBrush" Value="{DynamicResource Border.Input}"/>
                                            <Setter Property="BorderThickness" Value="1"/>
                                            <Setter Property="Margin" Value="0,0,0,20"/>
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="TextBox">
                                                        <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="6">
                                                            <ScrollViewer x:Name="PART_ContentHost"/>
                                                        </Border>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                        <Style TargetType="TextBlock" x:Key="Label">
                                            <Setter Property="FontWeight" Value="Medium"/>
                                            <Setter Property="Foreground" Value="{DynamicResource Text.Secondary}"/>
                                            <Setter Property="Margin" Value="0,0,0,8"/>
                                        </Style>
                                    </StackPanel.Resources>

                                    <!-- Form -->
                                    <TextBlock Text="Nombre de la Regla" Style="{StaticResource Label}"/>
                                    <TextBox Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}"/>

                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="20"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <StackPanel>
                                            <TextBlock Text="CategorÃ­a Destino" Style="{StaticResource Label}"/>
                                            <TextBox Text="{Binding TargetCategory, UpdateSourceTrigger=PropertyChanged}"/>
                                        </StackPanel>
                                        
                                        <StackPanel Grid.Column="2">
                                            <TextBlock Text="Tipo de Regla" Style="{StaticResource Label}"/>
                                            <TextBox Text="{Binding RuleType, UpdateSourceTrigger=PropertyChanged}" ToolTip="Ej: ExtensionRule, NamePatternRule"/>
                                        </StackPanel>
                                    </Grid>

                                    <TextBlock Text="ConfiguraciÃ³n (JSON)" Style="{StaticResource Label}"/>
                                    <TextBox Text="{Binding Configuration, UpdateSourceTrigger=PropertyChanged}" Height="120" TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Auto" FontFamily="Consolas"/>

                                    <CheckBox IsChecked="{Binding IsActive}" Margin="0,0,0,20">
                                        <CheckBox.Content>
                                            <TextBlock Text="Regla Activa" FontWeight="Medium" Foreground="{DynamicResource Text.Primary}"/>
                                        </CheckBox.Content>
                                    </CheckBox>
                                    
                                    <!-- Action Buttons -->
                                    <Grid Margin="0,20,0,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <Button Content="Eliminar Regla" Command="{Binding DataContext.DeleteRuleCommand, RelativeSource={RelativeSource AncestorType=Window}}" 
                                                Style="{DynamicResource Button.Ghost}" Foreground="{DynamicResource Status.Error}" HorizontalAlignment="Left"/>
                                        
                                        <Button Grid.Column="2" Content="ðŸ’¾ Guardar Cambios" 
                                                Command="{Binding DataContext.SaveRuleCommand, RelativeSource={RelativeSource AncestorType=Window}}" 
                                                Padding="20,10"/>
                                    </Grid>

                                </StackPanel>
                            </Border>
                            
                            <!-- Empty State -->
                            <StackPanel Margin="0,50,0,0" Visibility="{Binding SelectedRule, Converter={StaticResource NullToVisibilityConverter}, ConverterParameter=Inverse}">
                                <TextBlock Text="ðŸ‘ˆ Selecciona una regla para editar" HorizontalAlignment="Center" Foreground="{DynamicResource Text.Muted}" FontSize="16"/>
                            </StackPanel>
                        </StackPanel>
                    </ScrollViewer>
                </TabItem>

                <!-- TAB 2: Simulation -->
                <TabItem Header="SimulaciÃ³n y Pruebas">
                    <Grid Margin="0,20,0,0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Controls -->
                        <Border Style="{DynamicResource Card}" Padding="20" Margin="0,0,0,20">
                            <StackPanel>
                                <TextBlock Text="Simular OrganizaciÃ³n" Style="{DynamicResource Text.SubHeader}" Margin="0,0,0,15"/>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBox Text="{Binding SimulationDirectory, UpdateSourceTrigger=PropertyChanged}" 
                                             Padding="10" VerticalContentAlignment="Center"
                                             Foreground="{DynamicResource Text.Primary}" Background="{DynamicResource Bg.Input}" BorderBrush="{DynamicResource Border.Input}"/>
                                    <Button Grid.Column="1" Content="â–¶ï¸ Ejecutar Simulacro" Command="{Binding SimulateRulesCommand}" Margin="10,0,0,0"/>
                                </Grid>
                                <TextBlock Text="* Se simularÃ¡ la organizaciÃ³n en esta carpeta sin mover ningÃºn archivo real." 
                                           Foreground="{DynamicResource Text.Muted}" FontSize="11" Margin="0,5,0,0"/>
                            </StackPanel>
                        </Border>

                        <!-- Results -->
                        <DataGrid Grid.Row="1" ItemsSource="{Binding SimulationResults}" AutoGenerateColumns="False" IsReadOnly="True" 
                                  Background="Transparent" BorderThickness="0" HeadersVisibility="Column"
                                  GridLinesVisibility="Horizontal" HorizontalGridLinesBrush="{DynamicResource Border.Light}"
                                  RowBackground="Transparent" AlternatingRowBackground="{DynamicResource Bg.Surface.Hover}">
                            <DataGrid.Resources>
                                <Style TargetType="DataGridColumnHeader">
                                    <Setter Property="Background" Value="{DynamicResource Bg.Secondary}"/>
                                    <Setter Property="Padding" Value="10"/>
                                    <Setter Property="Foreground" Value="{DynamicResource Text.Secondary}"/>
                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                    <Setter Property="BorderThickness" Value="0,0,0,1"/>
                                    <Setter Property="BorderBrush" Value="{DynamicResource Border.Light}"/>
                                </Style>
                                <Style TargetType="DataGridCell">
                                    <Setter Property="Padding" Value="10,8"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="DataGridCell">
                                                <Border Padding="{TemplateBinding Padding}" Background="{TemplateBinding Background}" SnapsToDevicePixels="True">
                                                    <ContentPresenter SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </DataGrid.Resources>
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Archivo" Binding="{Binding FileName}" Width="200" Foreground="{DynamicResource Text.Primary}"/>
                                <DataGridTextColumn Header="CategorÃ­a Destino" Binding="{Binding TargetCategory}" Width="150" Foreground="{DynamicResource Brand.Primary}" FontWeight="Medium"/>
                                <DataGridTextColumn Header="Ruta Destino (Simulada)" Binding="{Binding TargetPath}" Width="*" Foreground="{DynamicResource Text.Secondary}"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                </TabItem>
            </TabControl>

            <!-- Status Bar -->
            <Border Grid.Row="1" Background="{DynamicResource Bg.Secondary}" Padding="15,10" BorderBrush="{DynamicResource Border.Light}" BorderThickness="0,1,0,0">
                <TextBlock Text="{Binding StatusMessage}" Foreground="{DynamicResource Text.Secondary}" FontSize="12"/>
            </Border>
        </Grid>
    </Grid>
</Window>
